<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
	<Runtime>
	</Runtime>

	<Extension path = "/MonoDevelop/Ide/Pads">
		<Pad id = "AdbSharpTools.DevicesPad"
			_label = "Android Devices"
			class = "AdbSharpTools.DevicesPad"
			defaultPlacement = "Right"
			defaultStatus="AutoHide" />
		<Pad id = "AdbSharpTools.ConsolePad"
			_label = "ADB Shell Console"
			class = "AdbSharpTools.ConsolePad"
			defaultPlacement = "Bottom"
			defaultStatus="Dockable" />
	</Extension>

	<Extension path = "/MonoDevelop/Ide/InitCompleteHandlers">
		<Class class = "AdbSharpTools.AddinInitialisation" />
	</Extension>

</ExtensionModel>
